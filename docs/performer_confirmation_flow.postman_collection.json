          },
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"user_id\": 42,\n  \"ad_id\": 17,\n  \"price\": 1500,\n  \"description\": \"Готов приступить завтра\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/ad_responses",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "ad_responses"
          ]
        }
      },
      "response": [
        {
          "name": "201 Created",
          "status": "Created",
          "code": 201,
          "body": "{\n  \"id\": 501,\n  \"user_id\": 42,\n  \"ad_id\": 17,\n  \"chat_id\": 9301,\n  \"client_id\": 7,\n  \"performer_id\": 42,\n  \"price\": 1500,\n  \"description\": \"Готов приступить завтра\",\n  \"created_at\": \"2024-05-15T09:42:11Z\"\n}"
